<div class="tile-box">
  <div class="row">
    <ul class="menu horizontal">
      <li><a class="sub-menu-text" href="/all_posts">All Posts</a></li>
      <li><a class="sub-menu-text" href="/deals">All Deals</a></li>
      <li><a class="sub-menu-text" href="/discussions">All Discussions</a></li>
    </ul>
  </div>
  <h1>All Reviews</h1>
  <% if @reviews.empty? %>
    <div class="empty-page">
      There are no new Reviews right now, check back later
    </div>
  <% else %>
    <% @reviews.each do |review| %>
      <div class="callout">
         <h3><%=review.title%> </h3>
         <a class="deal-text" href=`<%=review.url%>`>URL: <%=review.url%></a>
         <p>Link Flair: <%= review.link_flair_text %></p>
         <p>Created at: <%= Time.at(review.created) %></p>
       </div>
    <% end%>
  <% end %>
</div>
