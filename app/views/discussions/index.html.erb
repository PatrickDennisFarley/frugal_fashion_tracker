<div class="tile-box">
  <div class="row">
    <ul class="menu horizontal">
      <li><a class="sub-menu-text" href="/all_posts">All Posts</a></li>
      <li><a class="sub-menu-text" href="/deals">All Deals</a></li>
      <li><a class="sub-menu-text" href="/reviews">All Reviews</a></li>
    </ul>
  </div>
  <h1>All Discussions</h1>
  <% if @discussions.empty? %>
    <div class="empty-page">
      There are no new Discussions right now, check back later
    </div>
  <% else %>
    <% @discussions.each do |discussion| %>
      <div class="callout">
         <h3><%=discussion.title%> </h3>
         <a class="deal-text" href=`<%=discussion.url%>`>URL: <%=discussion.url%></a>
         <p>Link Flair: <%= discussion.link_flair_text %></p>
         <p>Created at: <%= Time.at(discussion.created) %></p>
       </div>
    <% end%>
  <% end %>
</div>
